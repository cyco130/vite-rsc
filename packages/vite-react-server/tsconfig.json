{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"allowJs": true,
		"noEmit": true,
		"checkJs": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"types": ["vite/client"],
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"paths": {
			"vite": ["./node_modules/vite"]
		},
		"baseUrl": "./"
	},
	"include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
